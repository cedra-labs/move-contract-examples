{
  "name": "@cedra-labs/wallet-api",
  "version": "0.2.2",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "dependencies": {
    "@cedra-labs/api": "^0.0.1",
    "@cedra-labs/wallet-standard": "^0.4.0"
  },
  "peerDependencies": {
    "@cedra-labs/ts-sdk": "^2.0.9"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tsup": "^8.5.0",
    "typescript": "5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "!src/**.test.ts",
    "!src/**/__tests__"
  ],
  "scripts": {
    "build:bundle": "tsup src/index.ts --tsconfig tsconfig.build.json --format cjs,esm --sourcemap",
    "build:declarations": "tsc --project tsconfig.build.json --emitDeclarationOnly --declaration --declarationMap",
    "build": "pnpm build:bundle && pnpm build:declarations",
    "lint": "prettier --check src",
    "lint:fix": "prettier --write src && eslint --cache ./src --fix",
    "test": "jest"
  }
}